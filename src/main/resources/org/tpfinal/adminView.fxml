      <Label layoutX="65.0" layoutY="238.0" text="New password" />
      <Button fx:id="changeUser" layoutX="36.0" layoutY="491.0" mnemonicParsing="false" onAction="#changeUser" prefHeight="25.0" prefWidth="138.0" text="Change user" />
